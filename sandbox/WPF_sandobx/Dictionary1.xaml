<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF_sandobx"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <LinearGradientBrush x:Key="MyGradient" StartPoint="0 0.5" EndPoint="0.5 0.5">
        <GradientStop Color="RosyBrown" Offset="0"/>
        <GradientStop Color="Chocolate" Offset="0.25"/>
        <GradientStop Color="BurlyWood" Offset="0.5"/>
        <GradientStop Color="DarkCyan" Offset="0.75"/>
        <GradientStop Color="YellowGreen" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="MySolid" Color="Bisque"/>

    <Button x:Key="MyButton"  Background="{StaticResource MySolid}" Height="36.5" FontWeight="Black">
        <TextBlock FontSize="25"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="hello"/>
    </Button>

    <col:ArrayList x:Key="Array">
        <sys:String>Dog</sys:String>
        <sys:String>Cat</sys:String>
        <sys:String>Monkey</sys:String>
        <sys:String>Crocodile</sys:String>
        <sys:String>Sheep</sys:String>
    </col:ArrayList>

    <TextBox x:Key="MyTextBox" FontSize="25" FontWeight="Black" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
</ResourceDictionary>